<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.agimaulana.monity">

    <application
        android:name=".MonityApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Monity">
        <activity android:name=".ui.LaunchScreenActivity"
            android:theme="@style/Theme.Monity.LaunchScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity"/>
        <activity android:name=".ui.InputDailyRationActivity"
            android:label="@string/input_daily_ration_activity_title"
            android:parentActivityName=".ui.MainActivity"/>
    </application>

</manifest>